---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation';
import ProductCard from '../components/ProductCard';
import Footer from '../components/Footer';
import { getProducts, getCollections } from '../lib/shopify';

// Fetch products and collections from Shopify
const products = await getProducts(12);
const collections = await getCollections(6);

const featuredProducts = products.slice(0, 8);
const newArrivals = products.filter(p => p.tags.includes('new')).slice(0, 4);
const bestSellers = products.filter(p => p.tags.includes('bestseller')).slice(0, 4);
---

<Layout title="UK Store - Premium Quality Products Delivered Nationwide">
  <Navigation client:load />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-primary-600 to-primary-800 text-white">
      <div class="absolute inset-0 bg-black bg-opacity-20"></div>
      <div class="relative max-w-7xl 3xl:max-w-8xl 5xl:max-w-[120rem] 7xl:max-w-[160rem] mx-auto px-4 sm:px-6 lg:px-8 3xl:px-12 5xl:px-16 7xl:px-24 py-24">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold mb-6">
            Premium Quality<br>
            <span class="text-primary-200">Delivered Nationwide</span>
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-primary-100 max-w-3xl mx-auto">
            Discover our curated collection of premium products, all with free UK delivery on orders over £50
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/collections/all" class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-md hover:bg-gray-50 transition-colors">
              Shop Now
            </a>
            <a href="/collections/new-arrivals" class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-md hover:bg-white hover:text-primary-600 transition-colors">
              New Arrivals
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Trust Indicators -->
    <section class="bg-gray-50 py-8">
